<UserControl x:Class="GamesDat.Demo.Wpf.Views.RealtimeTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GamesDat.Demo.Wpf.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:RealtimeTabViewModel}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Sources List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header with global controls -->
            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="Realtime Telemetry Sources" FontWeight="Bold" FontSize="14"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Button Content="Start All" Command="{Binding StartAllCommand}"
                            Margin="0,0,5,0" Padding="10,5"/>
                    <Button Content="Stop All" Command="{Binding StopAllCommand}"
                            Padding="10,5"/>
                </StackPanel>
            </StackPanel>

            <!-- Sources List -->
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding Sources}"
                     SelectedItem="{Binding SelectedSource}"
                     Margin="10,0"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:RealtimeSourceViewModel}">
                        <Border BorderBrush="LightGray" BorderThickness="1"
                                Padding="8" Margin="2" CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Source Name & Status -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10"
                                             Fill="{Binding IsRunning, Converter={StaticResource BoolToColorConverter}}"
                                             Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding SourceName}" FontWeight="SemiBold"/>
                                </StackPanel>

                                <!-- Status Message -->
                                <TextBlock Grid.Row="1" Text="{Binding StatusMessage}"
                                           FontSize="10" Foreground="Gray"
                                           Margin="0,2,0,0"/>

                                <!-- Current Values -->
                                <StackPanel Grid.Row="2" Margin="0,5,0,0">
                                    <TextBlock FontSize="11" FontWeight="SemiBold" Text="Current Values:"/>
                                    <TextBlock FontSize="10">
                                        <Run Text="Speed: "/><Run Text="{Binding CurrentSpeed, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10">
                                        <Run Text="Gear: "/><Run Text="{Binding CurrentGear, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10">
                                        <Run Text="RPM: "/><Run Text="{Binding CurrentRPM, Mode=OneWay}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="10" Margin="0,3,0,0">
                                        <Run Text="Data Points: "/><Run Text="{Binding DataPointCount, Mode=OneWay}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Controls -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
                                    <Button Content="Start" Command="{Binding StartCommand}"
                                            Padding="8,3" Margin="0,0,3,0" FontSize="11" MinWidth="50"/>
                                    <Button Content="Stop" Command="{Binding StopCommand}"
                                            Padding="8,3" Margin="0,0,3,0" FontSize="11" MinWidth="50"/>
                                    <Button Content="Clear" Command="{Binding ClearDataCommand}"
                                            Padding="8,3" FontSize="11" MinWidth="50"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                      Background="LightGray"/>

        <!-- Right Panel: Telemetry Data -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Telemetry Data Stream" FontWeight="Bold"
                       FontSize="14" Margin="10"/>

            <!-- DataGrid for telemetry data points -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding SelectedSource.DataPoints}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#F8F8F8"
                      Margin="10,0,10,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Timestamp"
                                        Binding="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}"
                                        Width="110"/>
                    <DataGridTextColumn Header="Source"
                                        Binding="{Binding SourceName}"
                                        Width="120"/>
                    <DataGridTextColumn Header="Type"
                                        Binding="{Binding DataType}"
                                        Width="100"/>
                    <DataGridTextColumn Header="Value"
                                        Binding="{Binding Value}"
                                        Width="*"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="ToolTip" Value="{Binding Value}"/>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
