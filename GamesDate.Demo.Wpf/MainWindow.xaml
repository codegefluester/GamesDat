<Window x:Class="GamesDate.Demo.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GamesDate.Demo.Wpf.Views"
        xmlns:vm="clr-namespace:GamesDate.Demo.Wpf.ViewModels"
        mc:Ignorable="d"
        Title="GamesDat Demo - File Watcher"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}">

    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
            <TabItem Header="File Watchers">
                <views:FileWatcherTabView DataContext="{Binding FileWatcherTab}"/>
            </TabItem>
            <TabItem Header="Realtime (Future)">
                <TextBlock Text="{Binding RealtimeTab.PlaceholderText}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Foreground="Gray"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
