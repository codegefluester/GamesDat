<UserControl x:Class="GamesDate.Demo.Wpf.Views.FileWatcherTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:GamesDate.Demo.Wpf.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:FileWatcherTabViewModel}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="250"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Sources List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with global controls -->
            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="File Watcher Sources" FontWeight="Bold" FontSize="14"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Button Content="Start All" Command="{Binding StartAllCommand}"
                            Margin="0,0,5,0" Padding="10,5"/>
                    <Button Content="Stop All" Command="{Binding StopAllCommand}"
                            Padding="10,5"/>
                </StackPanel>
            </StackPanel>

            <!-- Sources List -->
            <ListBox Grid.Row="1"
                     ItemsSource="{Binding Sources}"
                     SelectedItem="{Binding SelectedSource}"
                     Margin="10,0"
                     HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:FileWatcherSourceViewModel}">
                        <Border BorderBrush="LightGray" BorderThickness="1"
                                Padding="8" Margin="2" CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Source Name & Status -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10"
                                             Fill="{Binding IsWatching, Converter={StaticResource BoolToColorConverter}}"
                                             Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding SourceName}" FontWeight="SemiBold"/>
                                </StackPanel>

                                <!-- Path -->
                                <TextBlock Grid.Row="1" Text="{Binding WatchPath}"
                                           FontSize="10" Foreground="Gray"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding WatchPath}"/>

                                <!-- Patterns & File Count -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3,0,0">
                                    <TextBlock Text="{Binding Patterns}" FontSize="10" Foreground="DarkBlue"/>
                                    <TextBlock Text=" | " FontSize="10"/>
                                    <TextBlock Text="{Binding FileCount, StringFormat='{}{0} files'}" FontSize="10"/>
                                </StackPanel>

                                <!-- Controls -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,5,0,0">
                                    <Button Content="Start" Command="{Binding StartCommand}"
                                            Padding="8,3" Margin="0,0,3,0" FontSize="11" MinWidth="50"/>
                                    <Button Content="Stop" Command="{Binding StopCommand}"
                                            Padding="8,3" Margin="0,0,3,0" FontSize="11" MinWidth="50"/>
                                    <Button Content="Clear" Command="{Binding ClearFilesCommand}"
                                            Padding="8,3" FontSize="11" MinWidth="50"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Add Custom Source Panel -->
            <Expander Grid.Row="2" Header="Add Custom Source" Margin="10" IsExpanded="False">
                <StackPanel Margin="5">
                    <TextBlock Text="Name:" FontSize="11"/>
                    <TextBox Text="{Binding CustomName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,2,0,8"/>

                    <TextBlock Text="Path:" FontSize="11"/>
                    <Grid Margin="0,2,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0"
                                 Text="{Binding CustomPath, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Grid.Column="1" Content="..." Width="30" Margin="3,0,0,0"
                                Command="{Binding BrowseForPathCommand}" MinWidth="30"/>
                    </Grid>

                    <TextBlock Text="Patterns (comma-separated):" FontSize="11"/>
                    <TextBox Text="{Binding CustomPatterns, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,2,0,8"/>

                    <CheckBox Content="Include subdirectories"
                              IsChecked="{Binding CustomIncludeSubdirectories}"
                              Margin="0,0,0,8"/>

                    <Button Content="Add Source" Command="{Binding AddCustomSourceCommand}"
                            HorizontalAlignment="Left" Padding="15,5"/>
                </StackPanel>
            </Expander>
        </Grid>

        <!-- GridSplitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                      Background="LightGray"/>

        <!-- Right Panel: Detected Files -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Detected Files" FontWeight="Bold"
                       FontSize="14" Margin="10"/>

            <!-- DataGrid for all detected files -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding AllDetectedFiles}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#F8F8F8"
                      Margin="10,0,10,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Source"
                                        Binding="{Binding SourceName}"
                                        Width="120"/>
                    <DataGridTextColumn Header="File Name"
                                        Binding="{Binding FileName}"
                                        Width="200"/>
                    <DataGridTextColumn Header="Size"
                                        Binding="{Binding FileSizeFormatted}"
                                        Width="80"/>
                    <DataGridTextColumn Header="Detected At"
                                        Binding="{Binding DetectedAt, StringFormat='{}{0:HH:mm:ss}'}"
                                        Width="90"/>
                    <DataGridTextColumn Header="File Created"
                                        Binding="{Binding FileCreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                        Width="130"/>
                    <DataGridTextColumn Header="Full Path"
                                        Binding="{Binding FullPath}"
                                        Width="*"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="ToolTip" Value="{Binding FullPath}"/>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
